<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta  content="yes"  name="apple-mobile-web-app-capable">
    <meta  name="viewport"  content="inital-scale=1.0,maximum-scale=1.0,user-scalable=no;">
    <title>Login</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<script language="javascript">
function TipsDisplay() {
    if(document.getElementById('tips').innerText===''){
        document.getElementById('tipsBox').style.display='none';
    }
}
</script>

<body>


<section class="functionBoard">

    <div class="functionBoard left">
        <div>
            <h1 class="functionBoard-Title "><img src='images/LBLogo.png' height="99px" width="220px"></h1>
            <u1>
                <li class="list-group"><button class="functionBoard-Button current" type="button" id="buttonLogin" onclick="location.href='/login'">登录</button></li>
                <li class="list-group"><button class="functionBoard-Button" type="button" id="buttonRegist" onclick="location.href='/register'">注册</button></li>
            </u1>
        </div>
    </div>

    <div class="functionBoard right">
        <main role="main" class="container mt-3 mb-3">

            <header role="banner">
                <div class="headcontainer">
                    <div class="page-title">
                        物料管理系统
                    </div>
                </div>
            </header>




            <div id="content" class="row">
                <div class="col-md">
                    <div class="card">
                        <div class="card-header text-center">
                            <h2>登录</h2>
                        </div>
                        <div class="card-body">
                            <form method="post" id="fm1" >
                                <section class="form-group">
                                    <div id="tipsBox" style="color: red;" >提示:<a id="tips"><%=tips%></a></div>
                                    <style onload="TipsDisplay()"></style>
                                    <br>
                                    <div for="username">工号:</div>
                                    <div>
                                        <input class="form-control required" id="username" size="25" tabindex="1" type="text" accesskey="n" autocomplete="off" name="userId" placeholder="请输入您的工号" required>
                                    </div>
                                </section>

                                <section class="form-group">
                                    <div for="password">密码:</div>

                                    <div>
                                        <input class="form-control required" type="password" id="password" size="25" tabindex="2" accesskey="p" autocomplete="off" name="password" placeholder="请输入您的密码" required><span id="capslock-on" style="display:none;" >
                                <p>
                                    <i class="fa fa-exclamation-circle"></i>
                                    <span>CAPSLOCK key is turned on!</span>
                                </p>
                            </span>
                                    </div>
                                </section>


                                <input class="btn btn-block btn-submit button button--primary" name="submit" accesskey="l" tabindex="6" type="submit" value="登录" style="float: right;width: 150px;margin-top: 20px;height: 40px">
                                <btn class="btn button" type="button" onclick="location.href='/resetPassword'" style="float: left;width: 150px;margin-top: 20px;height: 40px; background-color: #4b83e2!important;">重置密码</btn>

                            </form>

                        </div>
                    </div>

                </div>


                <div id="providers" class="col-md mt-3 mt-md-0"> </div>





            </div>
        </main>
    </div>
</section>




<footer class="footer" role="contentinfo">
    <div class="container">
        <span id="copyright">Copyright © 佛山琉智科技有限公司</span>
    </div>
</footer>


</body>

</body>
</html>