            <form method="post" onsubmit="confirmAgainEdit()" action="/adBOMListMachineEdit?machineId=<%=machine[0].machineId%>">
                <table cellpadding="0"cellspacing="0"  class="itemDetailsPage">
                    <tr>
                        <td >
